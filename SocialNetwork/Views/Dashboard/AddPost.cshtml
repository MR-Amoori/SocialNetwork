@model SocialNetwork.DataLayer.ViewModels.AddPostViewModel

@{
    ViewData["Title"] = "Add Post";
}

<h1>Add Post</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPost" asp-controller="Dashboard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PostDescription" class="control-label"></label>
                <input asp-for="PostDescription" class="form-control" />
                <span asp-validation-for="PostDescription" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create Post" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Dashboard" class="btn btn-close"></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
